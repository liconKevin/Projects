{
  "tasks": [
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "C:/Compiler/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lws2_32"
      ],
      "options": {
        "cwd": "C:/Compiler/mingw64/bin"
      }
    },
    {
      "type": "shell",
      "label": "g++ build & run active file",
      "command": "C:/Compiler/mingw64/bin/g++.exe",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lws2_32"
      ],
      "options": {
        "cwd": "C:/Compiler/mingw64/bin"
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": "build",
      "detail": "compiler: cl.exe"
    }
  ],
  "version":"2.0.0"
}